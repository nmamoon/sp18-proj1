<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>
<h4>Trainer's Pokemon</h4>
<% if @user_is_trainer %>
    <%= button_to "New Pokemon", new_pokemon_path, :class => "button medium", :method => :get %>
<% end %>
<% @pokemons.each do |pokemon| %>

	<% if @pokemon.index %>
    	<%= image_tag("pokemon/#{@pokemon.ndex}.png", alt: "pokemon") %>
  	<% end %>
    <h5>Level <%=pokemon.level%> <%=pokemon.name%></h5>


    <p>Health:<%=pokemon.health%></p>

    <%= button_to "Do Damage!", damage_path(id: pokemon), :class => "button medium", :method => :patch %>
<% end %>
